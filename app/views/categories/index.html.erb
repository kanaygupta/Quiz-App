<% provide(:title, 'All categories') %>
<h1>All Categories</h1>

<%= will_paginate %>

<table class="table table-striped table-bordered table-hover" style="table-layout: fixed;text-align: center;">
  <thead>
  <tr>
    <th>Category Name</th>
    <th>View Subcategories</th>
    <th>View Leaderboard</th>
    <% if current_user.admin? %>
        <th>Delete Category</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <%= render @categories %>
  </tbody>
</table>
<%= will_paginate %>