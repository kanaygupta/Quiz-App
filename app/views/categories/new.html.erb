<% provide(:title, 'ADDcategory') %>
<h1>Add category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.submit "Addcategory", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>