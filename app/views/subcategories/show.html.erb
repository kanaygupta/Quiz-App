<% provide(:title, @subcategory.name) %>
<div class="row">
  <aside class="col-md-12">
    <section class="subcategory_info">

      <h1 style="text-align: center;font-size:40px">
        <%= @subcategory.name %>
      </h1>
      <br><br>
      <h2 style="text-align: left;font-size:30px">
        Select the quiz and start playing:
      </h2>
      <table class="table table-striped table-bordered table-hover" style="table-layout: fixed">
        <thead>
        <tr>
          <th>Quiz Name</th>
          <th>Play quiz</th>
          <th>View Leaderboard</th>
          <% if current_user.admin? %>
              <th>Delete quiz</th>
          <% end %>
        </tr>
        </thead>
        <tbody>
         <%= render @quizzes%>
        </tbody>
      </table>
      </section>
  </aside>
</div>