<% provide(:title, 'Add subcategory') %>
<h1>Add subcategory</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@subcategory) do |f| %>
        <%= f.label :name %>

        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :category_id %>
        <%= f.select :category_id,@array %>


        <%= f.submit "Addsubcategory", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>