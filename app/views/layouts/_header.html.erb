<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "QUIZUP", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <li><%= link_to "LetsPlay", categories_path %></li>
        <% current_user%>
        <% if @current_user and @current_user.admin %>
            <li><%= link_to "Add Category", new_category_path %></li>
            <li><%= link_to "Add subcategory", new_subcategory_path %></li>
            <li><%= link_to "Add quizzes", new_quiz_path %></li>
            <li><%= link_to "Add questions", new_question_path %></li>
        <% end %>
        <% if logged_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Quizzes Played", view_path(current_user) %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", user_path(current_user) %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>